class Pattern7 
{
	public static void main(String[] args) 
	{
		int r = 6;
		int n = 1;
		int count = 1;
		for (int i = 0;i<r;i++ )
		{
			for (int j = 0 ;j<r-i ;j++ )
			{
				System.out.print(" ");
			}
			count = 1;
			while(count<=n)
			{
				/*if (count==1 || count ==n || i ==r-1 )
				{
					System.out.print("*");
				}
				else
					System.out.print(" ");*/
					System.out.print("*");

			count++;

			}
			n = n+2;
			System.out.println();
		}
		int c = 1;
		int m = 3;
		for (int i = 2;i<=6 ;i++ )
		{
			for (int j = 2;j<=c+6 ;j++ )
			{
				System.out.print("");
			}
			for (int j = 1;j<=m+6 ;j++ )
			{
				System.out.print("*");
			}
			c+=1;
			m-=1;

			System.out.println("  ");
	}
	}
}
